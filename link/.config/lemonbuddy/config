[module/ram]
type = internal/memory
; label = RAM: %percentage_used%
; format-padding = 2

; Available tags:
;   <label> (default)
;   <bar-used>
;   <bar-free>
format = <label> <bar-used>

; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
label = RAM: %percentage_used%

bar-used-width = 10
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
; bar-used-fill = ─
; bar-used-empty = ─
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444
bar-used-indicator =
bar-used-indicator-foreground = #ff0000

[module/clock]
type = internal/date
date = %%{F#999}%a %e %b%%{F-} %%{F#fff}%H:%M:%S%%{F-}
; format =  <date>
interval = 1
; date_detailed = %%{F#888}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}
; format-padding = 2

