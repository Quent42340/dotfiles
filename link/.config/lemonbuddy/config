[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/example]
; monitor = eDP1
monitor = DP2
bottom = true
dock = false

tray-position = right

width = 100%
height = 25

;offset_x = 0
;offset_y = 0

background = #ff002211
foreground = #fff
;linecolor = #ff0000

spacing = 1
lineheight = 1

separator = |

locale = fr_FR.UTF-8

padding_left = 1
padding_right = 1
module_margin_left = 1
module_margin_right = 1

font-0 = Monospace:size=10;0
; font-0 = Sans:size=10;0
font-1 = FontAwesome:size=10:weight=heavy;0
font-2 = Monospace:size=6;-1
 
modules-left = menu-apps
modules-center = i3
modules-right = volume cpu ram clock

[module/menu-apps]
type = custom/menu

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu_open-LEVEL
;   menu_close
; Other commands will be executed using "/usr/bin/env sh -c $COMMAND"

menu-0-0 = Browsers
menu-0-0-exec = menu_open-1
menu-0-0-foreground = #fba922
menu-0-1 = Multimedia
menu-0-1-exec = menu_open-2
menu-0-1-foreground = #fba922
menu-0-2 = Utility
menu-0-2-exec = menu_open-3
menu-0-2-foreground = #fba922

menu-1-0 = Firefox
menu-1-0-exec = firefox &
menu-1-0-foreground = #fba922
menu-1-1 = Chromium
menu-1-1-exec = chromium &
menu-1-1-foreground = #fba922

menu-2-0 = Gimp
menu-2-0-foreground = #fba922
menu-2-0-exec = gimp &
menu-2-1 = Scrot
menu-2-1-exec = scrot &
menu-2-1-foreground = #fba922

menu-3-0 = Calculator
menu-3-0-foreground = #fba922
menu-3-0-exec = gnome-calculator &

; Available tags:
;   <label-toggle> (default) - gets replaced with <label-(open|close)>
;   <menu> (default)
;f-ormat = <label-toggle> <menu>

label-open = Apps
label-close = x

[module/cpu]
type = internal/cpu
label = CPU: %percentage%
; format-padding = 2

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-load_per_core>
format = <label> <ramp-load_per_core>

ramp-load_per_core-0 = ▁
ramp-load_per_core-0-font = 2
ramp-load_per_core-1 = ▂
ramp-load_per_core-1-font = 2
ramp-load_per_core-2 = ▃
