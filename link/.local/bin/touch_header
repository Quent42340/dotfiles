#!/bin/bash

if [ -z "$1" ]
then
	echo "Parameter needed."
	exit 1
fi

date="$(LC_ALL='C' date '+%a %b %d %T %Y')"

started_on="Started on  $date Quentin Bazin"
last_update="Last update $date Quentin Bazin"

prefix="**"
[ "$1" == "Makefile" ] && prefix="##"

sed -i "$1" -e "7s/^.*$/$prefix $started_on/g"
sed -i "$1" -e "8s/^.*$/$prefix $last_update/g"

